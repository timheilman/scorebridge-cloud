{
  "name": "scorebridge-cloud",
  "private": true,
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "codegen-gql-types": "cp aws-directives.graphql aws-scalars.graphql schema.api.graphql ${SCOREBRIDGE_TS_SUBMODULE_CLONE_LOCATION:-../scorebridge-ts-submodule}/graphql; graphql-codegen; mv appsync.d.ts scorebridge-ts-submodule/graphql; npm run tidy; cp scorebridge-ts-submodule/graphql/appsync.d.ts ${SCOREBRIDGE_TS_SUBMODULE_CLONE_LOCATION:-../scorebridge-ts-submodule}/graphql; cd scorebridge-ts-submodule; git checkout graphql/appsync.d.ts; cd ..",
    "compileMappingTemplates": "esbuild --bundle --sourcemap=inline --sources-content=false --target=esnext --platform=node --format=esm --external:@aws-appsync/utils --outdir=./src/mapping-templates-js/ --tsconfig=./src/mapping-templates-ts/tsconfig.json ./src/mapping-templates-ts/*.ts",
    "createAutomatedTestUsers": "ts-node ts-node-scripts/createAutomatedTestUsers.ts",
    "createFirstCognitoAdminSuperForEnv": "ts-node ts-node-scripts/createFirstCognitoAdminSuperForEnv.ts",
    "deleteTestRandomUsers": "ts-node ts-node-scripts/deleteTestRandomUserAccounts.ts",
    "deployDev": "DEPLOY_STAGE=dev npm run deployGeneral",
    "deployGeneral": "npm run compileMappingTemplates && CREATE_USER_API_KEY_EXPIRES_EPOCH_SEC=`ts-node ts-node-scripts/printRolloverEpochSeconds.ts` sls deploy --verbose --stage $DEPLOY_STAGE",
    "deployStaging": "DEPLOY_STAGE=staging npm run deployGeneral",
    "deployTmpenv": "DEPLOY_STAGE=tmpenv npm run deployGeneral",
    "exportEnvDev": "DEPLOY_STAGE=dev npm run exportEnvGeneral",
    "exportEnvGeneral": "ts-node ts-node-scripts/stackOutputsForDotenv.ts ${DEPLOY_STAGE} > .env",
    "exportEnvStaging": "DEPLOY_STAGE=staging npm run exportEnvGeneral",
    "exportEnvTmpenv": "DEPLOY_STAGE=tmpenv npm run exportEnvGeneral",
    "format": "prettier --write .",
    "integration-test": "jest --verbose ./__tests__/test_cases/integration",
    "lint": "eslint --fix --max-warnings 0 --report-unused-disable-directives .",
    "package": "npm run compileMappingTemplates && sls package",
    "provideEnvEntriesToDevice": "ts-node ts-node-scripts/provideEnvEntriesToDevice.ts > ${SCOREBRIDGE_DEVICE_CLONE_LOCATION:-../scorebridge-device}/.env",
    "provideEnvEntriesToWebapp": "ts-node ts-node-scripts/provideEnvEntriesToWebapp.ts > ${SCOREBRIDGE_WEBAPP_CLONE_LOCATION:-../scorebridge-webapp}/.env",
    "provideEnvEntriesToWebappCypress": "ts-node ts-node-scripts/provideEnvEntriesToWebappCypress.ts > ${SCOREBRIDGE_WEBAPP_CLONE_LOCATION:-../scorebridge-webapp/}cypress.env.json",
    "refreshExportedDetailsToWebapp": "npm run provideEnvEntriesToWebapp; npm run provideEnvEntriesToWebappCypress",
    "refreshExportedDetailsToDevice": "npm run provideEnvEntriesToDevice",
    "refreshExportedDetailsEverywhere": "npm run refreshExportedDetailsToWebapp; npm run refreshExportedDetailsToDevice",
    "setRecaptchaSecretsDev": "aws secretsmanager put-secret-value --secret-id dev.recaptcha2Secret --secret-string '{\"siteKey\":\"6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI\", \"secretKey\": \"6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe\"}' --profile ${SB_TEST_AWS_CLI_PROFILE} $@",
    "setRecaptchaSecretsStaging": "aws secretsmanager put-secret-value --secret-id staging.recaptcha2Secret --secret-string '{\"siteKey\":\"6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI\", \"secretKey\": \"6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe\"}' --profile ${SB_TEST_AWS_CLI_PROFILE} $@",
    "setRecaptchaSecretsTmpenv": "aws secretsmanager put-secret-value --secret-id tmpenv.recaptcha2Secret --secret-string '{\"siteKey\":\"6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI\", \"secretKey\": \"6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe\"}' --profile ${SB_TEST_AWS_CLI_PROFILE} $@",
    "sls": "sls",
    "test": "jest --verbose ./__tests__/test_cases/e2e",
    "tidy": "npm run lint; npm run format",
    "verifyEmail": "aws ses verify-email-identity --email-address --profile ${SB_TEST_AWS_CLI_PROFILE} $@"
  },
  "engines": {
    "node": "18.13.0",
    "npm": "9.7.1"
  },
  "dependencies": {
    "@middy/core": "^3.4.0",
    "@middy/http-json-body-parser": "^3.4.0",
    "chance": "^1.1.11"
  },
  "devDependencies": {
    "@aws-appsync/utils": "^1.2.6",
    "@aws-sdk/client-cognito-identity-provider": "^3.363.0",
    "@aws-sdk/client-dynamodb": "^3.360.0",
    "@aws-sdk/client-lambda": "^3.363.0",
    "@aws-sdk/client-s3": "^3.367.0",
    "@aws-sdk/client-secrets-manager": "^3.391.0",
    "@aws-sdk/credential-providers": "^3.358.0",
    "@aws-sdk/hash-node": "^3.357.0",
    "@aws-sdk/s3-request-presigner": "^3.367.0",
    "@aws-sdk/util-dynamodb": "^3.360.0",
    "@aws-sdk/util-format-url": "^3.363.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.119",
    "@types/chance": "^1.1.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^14.14.25",
    "@types/react-google-recaptcha": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.45.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "handlebars": "^4.7.8",
    "jest": "^29.5.0",
    "json-schema-to-ts": "^1.5.0",
    "log4js": "^6.9.1",
    "prettier": "^3.0.0",
    "serverless": "^3.0.0",
    "serverless-appsync-plugin": "^2.2.1",
    "serverless-esbuild": "^1.23.3",
    "serverless-iam-roles-per-function": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^5.3.3",
    "ulid": "^2.3.0"
  },
  "author": "Tim Heilman"
}
