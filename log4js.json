{
  "appenders": {
    "out": {
      "type": "stdout",
      "layout": "colored"
    },
    "err": {
      "type": "stderr"
    }
  },
  "categories": {
    "default": {
      "appenders": ["out", "err"],
      "level": "info"
    },
    "__test__": {
      "appenders": ["out", "err"],
      "level": "debug"
    }
  }
}